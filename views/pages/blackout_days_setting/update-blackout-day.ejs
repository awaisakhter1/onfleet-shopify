<!DOCTYPE html>
<html lang="en">
<head>
	<% include ../../include/design/head %>
</head>
<body>

	<header>
		<% include ../../include/design/header %>
	</header>
	
	<div class="row purplebg listings">
            <div class="col-md-8 col-md-offset-2 col-sm-12  col-xs-12">
                <div class="main-tab-menu">       
                         
                    <% include ../../include/design/top_nav %> 
                                 
                    <div id="myTabContent" class="tab-content">
                        <div class="tab-pane fade in active" id="profile">
                            <hr class="purplehr">                           
                            
                            <div class="row">
                                
                                <div class="col-md-12">
                                
                                    <div class="main-listing">
									    <h1>Update Blackout Day</h1>
                                        <div class="row">
										<form method="post" id="updatedeltimefrm" action="/pages/blackout_days_setting/update">
										<input type="hidden" name="bo_day_id" value="<%= did; %>" >
                                          
										    <% if (messages.error) { %>
											<div class="alert alert-error"><%- messages.error %></div>
											<% } %>
											 
											<% if (messages.success) { %>
												<div class="alert alert-success"><%- messages.success %></div>
											<% } %>  
											    
                                            <div class="col-md-6">       
											<div class="form-group">
												<label for="blackout_date">Select Date: </label>
												<input type="text" id="datepicker" value="<%= data[0].date.getFullYear()+"-"+(data[0].date.getMonth()+1)+"-"+data[0].date.getDate(); %>" class="form-control" name="blackout_date" required>
											</div>
											</div>
											
											<div style="clear:both"></div>
											
											<div class="col-md-6">
											<div class="form-group">
												<label for="blackout_descptn">Description: </label>
												<textarea id="blackout_descptn" class="form-control" name="blackout_descptn" required><%- data[0].description %></textarea>
											</div>
											</div>
										   
										    <div style="clear:both"></div>
											<div class="col-md-6">
											
											<button type="submit" class="btn btn-success">Update</button>
											</div>
										</form>	
                                        </div>
                                    
                                    </div>
                                    
                                </div>
                                
                            </div>
                            
                        </div>
                    </div>
    
                </div>
				
                <footer>
                <% include ../../include/design/footer %>
				</footer>
    
            </div>
        </div>
	
</body>
</html>

<script>
  $( function() {
    $( "#datepicker" ).datepicker({ dateFormat: 'yy-mm-dd' });
  } );
  
  $('.timepicker').wickedpicker();
  </script>