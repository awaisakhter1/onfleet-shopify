<!DOCTYPE html>
<html lang="en">
<head>
	<% include ../../include/design/head %>
</head>
<body>

	<header>
		<% include ../../include/design/header %>
	</header>
	
	<div class="row purplebg listings">
            <div class="col-md-8 col-md-offset-2 col-sm-12  col-xs-12">
                <div class="main-tab-menu">       
                         
                    <% include ../../include/design/top_nav %> 
                                 
                    <div id="myTabContent" class="tab-content">
                        <div class="tab-pane fade in active" id="profile">
                            <hr class="purplehr">                           
                            
                            <div class="row">
                                
                                <div class="col-md-12">
                                
                                    <div class="main-listing">
                                        
                                           
                                        <div class="row">
                                          <form method="post" action="/pages/nt_setting/update" id="updatenoticetimefrm">
                                                <div class="panel panel-default">
                                                    <div class="panel-body">
													
													<% if (messages.error) { %>
														<div class="alert alert-error"><%- messages.error %></div>
													<% } %>
													 
													<% if (messages.success) { %>
														<div class="alert alert-success"><%- messages.success %></div>
													<% } %>  
													<div class="col-md-12">
													<h4>Choose the amount of notice time needed to schedule an
order for a delivery window:</h4>
													</div>
													<div style="clear:both"></div>
													    <div class="col-md-6">
                                                        <div class="form-group">
														    
                                                            <label for="ntime_hrs">Notice Time Hours: </label>
                                                            
															<select id="ntime_hrs" class="form-control" name="ntime_hrs" required>
															
															<% for(var i=1; i<=8; i++){%>
															<option value="<%= i; %>" <% if(data[0].notice_time_hrs==i){%> selected <%}%>><%= i; %> Hour</option>
															<% } %>
															
															</select>
															</div> 
															
                                                        </div>
														<div style="clear:both"></div>
                                                        <div class="col-md-6">
													       <div class="form-group">
														   
                                                            <label for="ntime_mints">Notice Time Minutes: </label>
                                                            <select id="ntime_mints" class="form-control" name="ntime_mints" required>
															
															<option value="00" <% if(data[0].notice_time_mints==00){%> selected <%}%>>00</option>
															<option value="15" <% if(data[0].notice_time_mints==15){%> selected <%}%>>15</option>
															<option value="30" <% if(data[0].notice_time_mints==30){%> selected <%}%>>30</option>
															<option value="45" <% if(data[0].notice_time_mints==45){%> selected <%}%>>45</option>
															
															</select>
															</div>
                                                        </div>
														<div style="clear:both"></div>
														<div class="col-md-12">
														<h4>Choose the Delivery Window duration:</h4>
														</div>
														<div style="clear:both"></div>
													    <div class="col-md-6">
                                                        <div class="form-group">
														    
                                                            <label for="dtime_hrs">Delivery Time Hours: </label>
                                                            
															<select id="dtime_hrs" class="form-control" name="dtime_hrs" required>
															
															<% for(var i=1; i<=8; i++){%>
															<option value="<%= i; %>" <% if(data[0].delivery_time_hrs==i){%> selected <%}%>><%= i; %> Hour</option>
															<% } %>
															
															</select>
															</div> 
															
                                                        </div>
														<div style="clear:both"></div>
                                                        <div class="col-md-6">
													       <div class="form-group">
														   
                                                            <label for="dtime_mints">Delivery Time Minutes: </label>
                                                            <select id="dtime_mints" class="form-control" name="dtime_mints" required>
															
															<option value="00" <% if(data[0].delivery_time_mints==00){%> selected <%}%>>00</option>
															<option value="15" <% if(data[0].delivery_time_mints==15){%> selected <%}%>>15</option>
															<option value="30" <% if(data[0].delivery_time_mints==30){%> selected <%}%>>30</option>
															<option value="45" <% if(data[0].delivery_time_mints==45){%> selected <%}%>>45</option>
															
															
															</select>
															</div>
                                                        </div>
														
														<div style="clear:both"></div>
														
														<div class="col-md-12">
														<h4>Set delivery rate limits - limit number of deliveries in a given time period</h4>
														</div>
														
														<div style="clear:both"></div>
														
														<div class="col-md-6">
													       <div class="form-group">
														    <label for="drate_limit">Set delivery rate limits: </label>
														   <input value="<%= data[0].delivery_rate_limit; %>" type="number" id="drate_limit" class="form-control" name="drate_limit" required>
														   </div>
														</div>
														
														<div style="clear:both"></div>
														
                                                        <div class="col-md-6">
                                                        <button type="submit" class="btn btn-success">Update</button>
														</div>
                                                    </div>
                                                </div>
                                         </form>  
                                        </div>
                                    
                                    </div>
                                    
                                </div>
                                
                            </div>
                            
                        </div>
                    </div>
    
                </div>
				
                <footer>
                <% include ../../include/design/footer %>
				</footer>
    
            </div>
        </div>
	
</body>
</html>

<script>
  $( function() {
    $( "#datepicker" ).datepicker({ dateFormat: 'yy-mm-dd' });
  } );
  
  $('.timepicker').wickedpicker();
  </script>